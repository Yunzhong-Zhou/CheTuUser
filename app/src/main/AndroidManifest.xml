<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.chetu.user">
    <!--网络权限问题-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--用于获取运营商信息，用于支持提供运营商信息相关的接口-->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--用于访问wifi网络信息，wifi信息会用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--用于获取wifi的获取权限，wifi信息会用来进行网络定位-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!--用于申请调用A-GPS模块-->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <!--8.0安装需要的权限-->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <!--读写权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--读取手机信息-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--打电话-->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 相机 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!--9.0权限-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Android Q后台定位权限-->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <uses-permission
        android:name="android.permission.CHANGE_CONFIGURATION"
        tools:ignore="ProtectedPermissions" />

    <!-- 硬件加速对X5视频播放非常重要，建议开启 -->
    <uses-permission android:name="android.permission.GET_TASKS" />


    <!--录音权限-->
    <!--<uses-permission android:name="android.permission.RECORD_AUDIO" />-->

    <!-- 振动 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:maxAspectRatio="2.4"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:resizeableActivity="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:windowIsTranslucent="false">
        <activity
            android:name=".activity.HelloActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"><!--//全屏-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".utils.permission.PermissionsActivity"
            android:label="权限页" />
        <activity
            android:name=".activity.GuideActivity"
            android:label="引导页"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".activity.MainActivity"
            android:label="主页"
            android:theme="@style/DefaultCityPickerTheme">
            <!--点击通知默认打开-->
            <intent-filter>
                <action android:name="${applicationId}.default.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="登录" />
        <activity
            android:name=".activity.WebContentActivity"
            android:label="网页" />
        <activity
            android:name=".view.zxing.CaptureActivity"
            android:label="扫一扫" />


        <!--养车-->
        <activity
            android:name=".activity.DraftActivity"
            android:label="草稿" />


        <!--我的-->
        <activity
            android:name=".activity.SetUpActivity"
            android:label="系统设置" />
        <activity
            android:name=".activity.IntegralActivity"
            android:label="积分" />
        <activity
            android:name=".activity.MyProfileActivity"
            android:label="我的资料" />
        <activity
            android:name=".activity.MyOrderActivity"
            android:label="我的订单" />
        <activity
            android:name=".activity.DaiJieCheActivity"
            android:label="待接车" />
        <activity
            android:name=".activity.DaiFenPeiActivity"
            android:label="待分配" />
        <activity
            android:name=".activity.DaiShiGongActivity"
            android:label="待施工" />
        <activity
            android:name=".activity.JinXingZhongActivity"
            android:label="进行中" />
        <activity
            android:name=".activity.DaiFuJianActivity"
            android:label="待复检" />
        <activity
            android:name=".activity.YiWanGongActivity"
            android:label="已完工" />
        <activity
            android:name=".activity.YiTiCheActivity"
            android:label="已完工" />
        <activity
            android:name=".activity.CouponActivity"
            android:label="优惠券" />
        <activity
            android:name=".activity.WaitingReleaseActivity"
            android:label="待发布" />
        <activity
            android:name=".activity.NotebookActivity"
            android:label="记事本" />
        <activity
            android:name=".activity.AddNotebookActivity"
            android:label="添加记事本" />
        <activity
            android:name=".activity.FootprintActivity"
            android:label="足迹" />
        <activity
            android:name=".activity.MyGarageActivity"
            android:label="我的车库" />
        <activity
            android:name=".activity.AddMerchantActivity"
            android:label="申请加盟-商户入驻-添加商户" />
        <activity
            android:name=".activity.ServiceCenterActivity"
            android:label="客服中心" />


        <!--微信支付回调-->
        <activity
            android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="wx79d0350178a9ff3a" />
            </intent-filter>
        </activity>
        <activity android:name=".wxapi.WXEntryActivity"
            android:launchMode="singleTop"
            android:exported="true"/>
        <!--查看mob推送日志-->
        <meta-data
            android:name="com.mob.mobpush.debugLevel"
            android:value="4" />
        <!--配置华为-->
        <receiver android:name="com.mob.pushsdk.plugins.huawei.PushHaiWeiRevicer">
            <intent-filter>
                <action android:name="com.huawei.android.push.intent.REGISTRATION" />
                <action android:name="com.huawei.android.push.intent.RECEIVE" />
                <action android:name="com.huawei.android.push.intent.CLICK" />
                <action android:name="com.huawei.intent.action.PUSH_STATE" />
                <action android:name="com.huawei.intent.action.PUSH_DELAY_NOTIFY" />
            </intent-filter>
        </receiver>
        <!--高德地图-->
        <service android:name="com.amap.api.location.APSService" />
        <!--开发者申请的key-->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="3e52fd1105c917923f7d4ab4fa35a661"></meta-data>
        <!--全面屏适配-->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" />
        <!--适配华为（huawei）刘海屏-->
        <meta-data
            android:name="android.notch_support"
            android:value="true" />
        <!--适配小米（xiaomi）刘海屏-->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />
        <!--7.0限制-私有目录被限制访问-->
        <!--exported:要求必须为false，为true则会报安全异常。
        grantUriPermissions:true，表示授予 URI 临时访问权限。-->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider" />
        </provider>
        <!--9.0-->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

    </application>

</manifest>