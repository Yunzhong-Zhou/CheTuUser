<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--EditText默认颜色-->
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <!--启动背景-->
        <item name="android:windowBackground">@mipmap/background</item>
        <item name="android:windowIsTranslucent">true</item>


        <!--<item name="android:navigationBarColor"></item>&lt;!&ndash;导航栏颜色&ndash;&gt;-->
        <!--<item name="android:statusBarColor"></item>&lt;!&ndash;状态栏颜色&ndash;&gt;-->

        <item name="android:textColor">@color/black1</item><!--默认字体颜色-->
        <item name="android:textSize">15.0sp</item><!--默认字号-->
        <item name="android:typeface">normal</item><!--默认字体-->
        <!--<item name="android:textScaleX">1.0</item>&lt;!&ndash;字体间距&ndash;&gt;-->
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white2</item>
        <item name="colorControlActivated">@color/white1</item>
    </style>
    <!--popupwindow 底部弹出动画-->
    <style name="take_pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

</resources>
