<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="26dp"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--车险询价-->
                <LinearLayout
                    android:id="@+id/ll_tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!--基本信息-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/yuanjiao_10_baise"
                        android:orientation="vertical"
                        android:paddingTop="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="13dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:text="车牌"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:hint="输入车牌（必填）"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:background="@color/xian" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="13dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:text="车架号"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:hint="输入车架号"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:background="@color/xian" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="13dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:text="车主姓名"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:hint="输入姓名（必填）"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:background="@color/xian" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="13dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:text="车主电话"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:hint="输入电话（必填）"
                                android:paddingTop="15dp"
                                android:inputType="phone"
                                android:paddingBottom="15dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:background="@color/xian" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="13dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:text="身份证号"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:hint="输入身份证号"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:background="@color/xian" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="13dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:text="商业保险公司名称"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:hint="输入名称"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="13dp"
                            android:background="@color/xian" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:paddingLeft="13dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:text="投保城市"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:hint="输入投保城市"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>
                    <!--行驶证上传-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/yuanjiao_10_baise"
                        android:orientation="vertical"
                        android:padding="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="行驶证上传"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp">

                                    <ImageView
                                        android:id="@+id/imageView1"
                                        android:layout_width="match_parent"
                                        android:layout_height="107dp"
                                        android:layout_centerInParent="true"
                                        android:layout_marginRight="8dp"
                                        android:onClick="onClick"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/ic_add_image1" />

                                    <ImageView
                                        android:id="@+id/iv_del1"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:onClick="onClick"
                                        android:src="@mipmap/ic_delete_red"
                                        android:visibility="gone" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13dp"
                                    android:text="主页"
                                    android:textColor="@color/black3"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp">

                                    <ImageView
                                        android:id="@+id/imageView2"
                                        android:layout_width="match_parent"
                                        android:layout_height="107dp"
                                        android:layout_centerInParent="true"
                                        android:layout_marginRight="8dp"
                                        android:onClick="onClick"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/ic_add_image1" />

                                    <ImageView
                                        android:id="@+id/iv_del2"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:onClick="onClick"
                                        android:src="@mipmap/ic_delete_red"
                                        android:visibility="gone" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13dp"
                                    android:text="副页"
                                    android:textColor="@color/black3"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <!--身份证上传-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/yuanjiao_10_baise"
                        android:orientation="vertical"
                        android:padding="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身份证上传"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp">

                                    <ImageView
                                        android:id="@+id/imageView3"
                                        android:layout_width="match_parent"
                                        android:layout_height="107dp"
                                        android:layout_centerInParent="true"
                                        android:layout_marginRight="8dp"
                                        android:onClick="onClick"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/ic_add_image1" />

                                    <ImageView
                                        android:id="@+id/iv_del3"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:onClick="onClick"
                                        android:src="@mipmap/ic_delete_red"
                                        android:visibility="gone" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13dp"
                                    android:text="正面"
                                    android:textColor="@color/black3"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp">

                                    <ImageView
                                        android:id="@+id/imageView4"
                                        android:layout_width="match_parent"
                                        android:layout_height="107dp"
                                        android:layout_centerInParent="true"
                                        android:layout_marginRight="8dp"
                                        android:onClick="onClick"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/ic_add_image1" />

                                    <ImageView
                                        android:id="@+id/iv_del4"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:onClick="onClick"
                                        android:src="@mipmap/ic_delete_red"
                                        android:visibility="gone" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13dp"
                                    android:text="背面"
                                    android:textColor="@color/black3"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_upload"
                        android:onClick="onClick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/yuanjiao_5_lanse"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="提交"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
                <!--车险报案-->
                <LinearLayout
                    android:id="@+id/ll_tab2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yuanjiao_10_baise"
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </RelativeLayout>

        </ScrollView>

        <!--tab-->
        <com.lijiankun24.shadowlayout.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:shadowColor="#330667F4"
            app:shadowDx="0dp"
            app:shadowDy="4dp"
            app:shadowRadius="5dp"
            app:shadowShape="rectangle"
            app:shadowSide="left|right|bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yuanjiao_5_baise"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车险询价"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/yuanjiao_3_lanse" />

                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:background="@color/xian" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车险报案"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/yuanjiao_3_lanse"
                        android:visibility="invisible" />

                </LinearLayout>

            </LinearLayout>
        </com.lijiankun24.shadowlayout.ShadowLayout>

    </RelativeLayout>

</LinearLayout>